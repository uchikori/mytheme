{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "my-plugin/custom-image",
  "title": "Custom Image Block",
  "category": "media",
  "icon": "format-image",
  "description": "A custom image block with absolute positioning",
  "attributes": {
    "top": {
      "type": "string",
      "default": "0px"
    },
    "left": {
      "type": "string",
      "default": "0px"
    }
  },
  "supports": {
    "html": false
  },
  "editorScript": "file:./index.js",
  "script": "file:./frontend.js",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css"
}
